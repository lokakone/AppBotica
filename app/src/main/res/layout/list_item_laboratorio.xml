<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvRucLaboratorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RUC"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRazonSocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Razón Social" />

        <TextView
            android:id="@+id/tvDireccionLaboratorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dirección" />

        <TextView
            android:id="@+id/tvMovilLaboratorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Móvil" />

        <TextView
            android:id="@+id/tvContactoLaboratorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacto" />

        <TextView
            android:id="@+id/tvEmailLaboratorio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email" />



    </LinearLayout>

</androidx.cardview.widget.CardView>

